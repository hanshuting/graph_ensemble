%     figure; set(gcf,'color','w','position',[2014 369 518 225])
%     subplot(1,2,1); hold on
%     for ii = 1:num_stim_cell
%         [xx,yy,~,auc(ii)] = perfcurve(opto_stim_high'==(pattern_indx+1),...
